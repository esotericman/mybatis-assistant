<?xml version="1.0" encoding="utf-8" ?>
<templates>
    <!--entity-->
    <template>
        <property name="configName" value="model"/>
        <property name="configFile" value="model.ftl"/>
        <property name="fileName" value="${model.fileName}"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${model.basePackage}.model"/>
        <property name="encoding" value="${model.encoding}"/>
        <property name="basePath" value="${model.basePath}"/>
    </template>
    <!--service interface-->
    <template>
        <property name="configName" value="serviceInterface"/>
        <property name="configFile" value="serviceInterface.ftl"/>
        <property name="fileName" value="${model.fileName}Service"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${model.basePackage}.service"/>
        <property name="encoding" value="${model.encoding}"/>
        <property name="basePath" value="${model.basePath}"/>
    </template>
    <!--service implementation-->
    <template>
        <property name="configName" value="serviceImpl"/>
        <property name="configFile" value="serviceImpl.ftl"/>
        <property name="fileName" value="${model.fileName}ServiceImpl"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${model.basePackage}.service.impl"/>
        <property name="encoding" value="${model.encoding}"/>
        <property name="basePath" value="${model.basePath}"/>
    </template>
    <!--mapper interface-->
    <template>
        <property name="configName" value="mapperInterface"/>
        <property name="configFile" value="mapperInterface.ftl"/>
        <property name="fileName" value="${model.fileName}Mapper"/>
        <property name="suffix" value=".java"/>
        <property name="packageName" value="${model.basePackage}.mapper"/>
        <property name="encoding" value="${model.encoding}"/>
        <property name="basePath" value="${model.basePath}"/>
    </template>
    <!--mapper xml-->
    <template>
        <property name="configName" value="mapperXml"/>
        <property name="configFile" value="mapperXml.ftl"/>
        <property name="fileName" value="${model.fileName}Mapper"/>
        <property name="suffix" value=".xml"/>
        <property name="packageName" value="mapper"/>
        <property name="encoding" value="${model.encoding}"/>
        <property name="basePath" value="src/main/resources"/>
    </template>
</templates>
